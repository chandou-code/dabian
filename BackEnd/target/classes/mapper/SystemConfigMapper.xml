<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.campus.lostfound.mapper.SystemConfigMapper">

    <select id="selectByKey" resultType="com.campus.lostfound.entity.SystemConfig">
        SELECT * FROM system_configs 
        WHERE config_key = #{configKey}
    </select>

    <update id="updateConfigValue">
        UPDATE system_configs 
        SET config_value = #{configValue}, updated_at = NOW()
        WHERE config_key = #{configKey}
    </update>

    <select id="selectPublicConfigs" resultType="java.util.Map">
        SELECT config_key, config_value FROM system_configs 
        WHERE is_public = 1
    </select>

    <select id="selectAllConfigs" resultType="java.util.Map">
        SELECT config_key, config_value FROM system_configs 

    </select>

    <update id="batchUpdateConfigs">
        <foreach collection="configs" index="key" item="value" separator=";">
            UPDATE system_configs 
            SET config_value = #{value}, updated_at = NOW()
            WHERE config_key = #{key}
        </foreach>
    </update>

</mapper>